extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if passages && passages.length > 0
            each item in passages
              .col-md-2
                .thumbnail
                  a(href="/passage/#{item._id}")
                    img(src="#{item.poster}", alt="#{item.title}")
                  .caption(style="text-align:center;")
                    h4 #{item.title}
                    p: a.btn.btn-success(href="/passage/#{item._id}", role="button") 进入学习
      ul.pagination
        //-不会被缓冲代码 -
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/search?#{query}&p=#{i}') #{i + 1}
          - }
        - }