extends ../layout2

block content
  link(href="/static/libs/style.css" rel="stylesheet")
  div(style="background:#1a1013;")
    div(class="container")
      div(id="carousel-example-generic" class="carousel slide" data-ride="carousel")
        ol(class="carousel-indicators")
          li(data-target="#carousel-example-generic" data-slide-to="0" class="active")
          li(data-target="#carousel-example-generic" data-slide-to="1")
          li(data-target="#carousel-example-generic" data-slide-to="2")
          li(data-target="#carousel-example-generic" data-slide-to="3")
          li(data-target="#carousel-example-generic" data-slide-to="4")
        div(class="carousel-inner" role="listbox")
          div(class="item active")
            a(href="/passage/59152429daf2cd2088a913ed")
              img(src="/static/img/banner1.jpg" alt="比赛专用")
          div(class="item")
            a(href="/passage/59152429daf2cd2088a913ed")
              img(src="/static/img/banner2.jpg" alt="比赛专用")
          div(class="item")
            a(href="/passage/59152429daf2cd2088a913ed")
              img(src="/static/img/banner3.jpg" alt="比赛专用")
          div(class="item")
            a(href="/passage/59152429daf2cd2088a913ed")
              img(src="/static/img/banner4.jpg" alt="比赛专用")
          div(class="item")
            img(src="/static/img/banner5.jpg" alt="比赛专用")
        a(class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev")
          span(class="glyphicon glyphicon-chevron-left" aria-hidden="true")
          span(class="sr-only") Previous
        a(class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next")
          span(class="glyphicon glyphicon-chevron-right" aria-hidden="true")
          span(class="sr-only") Next
  .container
    .row
      each category in categories
        .panel.panel-muted
          .panel-heading
            h3 
              a(href="/results?category=#{category._id}") #{category.name}
          .panel-body
            if (category.passages&&category.passages.length>0)
              each item in category.passages
                div(class="col-md-2")
                  //缩略图
                  div(class="thumbnail div1")
                    a(href="/passage/#{item._id}")
                      img(class="img-responsive" src="#{item.poster}" alt="#{item.title}")
                    div(class="caption" style="text-align:center;")
                      h3 #{item.title}
                      p: a.btn.btn-danger(href="/passage/#{item._id}",role="button") 进入学习