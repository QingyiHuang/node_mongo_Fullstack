extends ../layout

block content
  .container
    .row
      .col-md-7
        embed(src="#{passage.flash}" type="application/x-shockwave-flash" allowscriptaccess="always" allowfullscreen="true" wmode="opaque" width="480" height="400")
      .col-md-5
        dl.dl-horizontal
          dt 项目
          dd= passage.title
          dt 作者
          dd= passage.editor
          dt 简介
          dd= passage.summary
          dt 时间
          dd= passage.time
          dt 分类
          dd= passage.file
  .container
    .row
      .col-md-7
        .panel.panel-defatul
          .panel-heading
            h3 评论区
          .panel-body
            ul.media-list
              each item in comments
                li.media
                  .pull-left
                    a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{item.from._id}")
                      img.media-object(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
                  .media-body
                    h4.media-heading #{item.from.name}
                    p #{item.content}
                    a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{item.from._id}")
                      p(class="pull-right") 回复
                    if item.reply && item.reply.length > 0
                      each reply in item.reply
                        .media
                          .pull-left
                            a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{reply.from._id}")
                              img.media-object(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
                          .media-body
                            h4.media-heading
                              | #{reply.from.name}
                              small(class="text-danger") &nbsp;回复&nbsp;
                              | #{reply.to.name}:
                            p #{reply.content}
                  hr
            #comments
              form#commentForm(method="POST", action="/user/comment")
                input(type="hidden", name="comment[passage]", value="#{passage._id}")
                if user
                  input(type="hidden", name="comment[from]", value="#{user._id}")
                .form-group
                  textarea.form-control(name="comment[content]", row="3")
                if user
                  button.btn.btn-primary(type='submit') 提交
                else
                  a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
  script(src="/static/js/detail.js")