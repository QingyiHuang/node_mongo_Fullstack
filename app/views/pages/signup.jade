doctype
html
  head
    meta(http-equiv=Content-Type content="text/html;charset=utf-8")
    meta(name="baidu-site-verification" content="I8jGrwezyY")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="Keywords" content="黄卿怡的博客,huangqingyi，hqy，huangqingyi.cn")
    meta(name= "description"   content="黄卿怡的博客,记录大学时光的精彩")
    title #{title}
    style(.body{padding-top: 130px;})
    include ../includes/head
    link(href="/static/libs/style.css" rel="stylesheet")
  body
    include ../includes/header
    .container
      .row
      form(method="POST",action="/user/signup")
        .modal-header 注册
        .modal-body
          .form-group
            //-文字和控件绑定的label标签
            label(for="signupName") 用户名
            input(id="signupName" class="form-control" name="user[name]" type="text")
          .form-group
            label(for="signupPassword") 密码
            input(id="signupPassword" class="form-control" name="user[password]" type="password")
        .modal-footer
          button(class="btn btn-default" type="button",data-dismiss="modal") 关闭
          button(class="btn btn-success",type="submit") 注册